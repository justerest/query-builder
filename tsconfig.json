{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "importHelpers": true
  },
  "include": ["src"],
  "exclude": ["*.(spec|test).tsx?"]
}
